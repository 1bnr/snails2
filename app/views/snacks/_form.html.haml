= form_for @snack, html: { multipart: true } do |f|
  - if @snack.errors.any?
    #error_explanation
      %h2
        = pluralize(@snack.errors.count, "error")
        prohibited this snack from being saved:
      %ul
        - @snack.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :metadata
    = f.text_field :metadata
  .field
    = f.label :image
    = f.file_field :image
    - if f.object.image?
      = image_tag f.object.image.url
      %br
      = f.label :remove_image
      = f.check_box :remove_image


  .actions
    = f.submit
    = button_tag "Cancel", :type => 'submit' , :name => 'cancel', :value => true
