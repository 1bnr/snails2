= form_for(@snack) do |f|
  - if @snack.errors.any?
    #error_explanation
      %h2
        = pluralize(@snack.errors.count, "error")
        prohibited this snack from being saved:
      %ul
        - @snack.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .actions
    = f.submit
