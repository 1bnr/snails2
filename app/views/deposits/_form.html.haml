= form_for @deposit do |f|
  - if @deposit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deposit.errors.count, "error")} prohibited this deposit from being saved:"
      %ul
        - @deposit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
