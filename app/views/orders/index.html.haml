%nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} Snails
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          = link_to "Home", users_show_url
        %li.active
          = link_to "Orders", orders_url
        %li
          = link_to "Snacks", new_order_url
        %li
          = link_to "Account", deposits_url
        %li
          = link_to "Log out", destroy_user_session_url, :method => :delete

.jumbotron
  .container
    %h1 Orders
    %p
      View and update orders

.container
  %table.table
    %thead
      %tr
        %th ID
        %th Price
        %th Purchase Date
    %tbody
    - @orders.each do |order|
      %tr
        %th{:scope => "row"}= order.id
        %td= order.calculate_order_sum
        %td= order.created_at.to_formatted_s(:short)
        %td= link_to 'Show', order
        %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }

  %strong Total: #{@grand_total}
